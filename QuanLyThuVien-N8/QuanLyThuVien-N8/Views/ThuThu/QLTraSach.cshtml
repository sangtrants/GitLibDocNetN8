@{
    ViewBag.Title = "QLTraSach";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<div class="panel panel-primary">
    <div class="panel-heading">
        <center>QUẢN LÝ TRẢ SÁCH</center>
    </div>
<br />
    <div align="center" id="qltrasach">
    @using (Ajax.BeginForm("XacNhanDocGiaTraSach", "ThuThu",
                            new AjaxOptions
                            {
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "GET",
                                OnFailure = "searchFailed",
                                LoadingElementId = "ajax-loader",
                                UpdateTargetId = "qltrasach",
                            }))
    {
        <p>
            <strong>Mã đọc giả:</strong> <input type="text" name="MaDocGia" class="tukhoa"/>
            <input type="submit" class="btn btn-outline btn-primary" value="Xác nhận" id="timkiem"/>
        </p>
    }
    <i>(Nhập mã đọc giả muốn trả sách)</i>
    </div>
</div>