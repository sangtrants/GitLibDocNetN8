@model QuanLyThuVien_N8.Models.NguoiDung

@{
    ViewBag.Title = "Cập Nhật Ảnh";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<h3 class="page-header">QUẢN LÝ ĐỘC GIẢ</h3>

@using (Html.BeginForm("cnAnh", "ThuThu", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="panel panel-primary">
        <div class="panel-heading">
            <center>CẬP NHẬT ẢNH ĐẠI DIỆN</center>
        </div>
        <div class="table">
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th class="control-label">
                        Họ Tên:
                    </th>
                    <td class="editor-field">
                        @Html.DisplayFor(model => model.HoTen)
                        @Html.HiddenFor(model => model.HoTen)
                    </td>
                </tr>
                <tr>
                    <th class="control-label">
                        MSSV:
                    </th>
                    <td class="editor-field">
                        @Html.DisplayFor(model => model.MSSV)
                        @Html.HiddenFor(model => model.MSSV)
                    </td>
                </tr>
                <tr>
                    <th class="control-label">
                        Tên Đăng Nhập:
                    </th>
                    <td class="editor-field">
                        @Html.DisplayFor(model => model.TenDangNhap)
                        @Html.HiddenFor(model => model.TenDangNhap)
                    </td>
                </tr>
                <tr>
                    <th class="control-label">
                        Ảnh Đại Diện:
                    </th>
                    <td>
                        <img style="width:118px; height:118px" src="@Model.AnhDaiDien" />
                        <br />
                        <br />
                        <input type="file" class="btn-outline btn-primary" name="file" id="file" />
                        <br />
                        <input type="submit" class="btn btn-outline btn-primary" value="Lưu" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
