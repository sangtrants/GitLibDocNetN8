@model PagedList.IPagedList<QuanLyThuVien_N8.Models.TacGia>
@using PagedList.Mvc;

@{
    ViewBag.Title = "QuanLyTacGia";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        <center>XEM TOÀN BỘ TÁC GIẢ</center>
    </div>
<br />

<div id="quanlysach">
    <div class="panel-body">
    @foreach (var item in Model)
         {
        <div class="feat_prod_box">
                <div class="prod_det_box">
                	<div class="box_top"></div>
                    <div class="box_center">
                    <div class="prod_title">@item.TenTacGia</div>
                    <p class="details"><strong>Mã tác giả</strong>: @Html.DisplayFor(modelItem => item.MaTacGia)</p>
                    <p class="details"><strong>Năm sinh</strong>: @Html.DisplayFor(modelItem => item.NamSinh)</p>
                    <p class="details"><strong>Quốc tịch</strong>: @Html.DisplayFor(modelItem => item.QuocTich)</p>
                    <p class="details"><strong>Tên viết tắt</strong>: @Html.DisplayFor(modelItem => item.TenVietTat)</p>
                    <input type="button" class="btn btn-outline btn-primary" value="Cập Nhật" onclick= "location.href='@Url.Action("CapNhatTacGia", "ThuThu", new { id = item.MaTacGia})'" />
                    <input type="button" class="btn btn-outline btn-primary" value="Xoá" id="Xoa" onclick= "location.href='@Url.Action("XoaTacGia", "ThuThu", new { id = item.MaTacGia })'" />
                    <div class="clear"></div>
                    </div>
                    <div class="box_bottom"></div>
                </div>    
            <div class="clear"></div>
            </div>
    }
    <div class ="Paging">@Html.PagedListPager(Model, page => Url.Action("XemToanBoTacGia", new { page }));</div>

    </div>
</div>
</div>